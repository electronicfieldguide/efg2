<project name="generateSearchableDocument" default="generate" basedir=".">
	<property environment="myenv"/>
	<property name="efg.home" value="."/>
	<property name="jars.home" value="${efg.home}/lib"/>

	<!--  search page generation-->
	<path id="generate.class.path">
		<fileset dir="${jars.home}">
			<include name="*.jar"/>
		</fileset>
	</path>

	<target name="generate" depends="clean">

		<java fork="yes" classname="org.exolab.castor.builder.SourceGenerator">
			<arg line="-verbose -i schema/SearchableSchema.xsd -package project.efg.searchableDocument -dest temp -types j2 -f"/>
			<classpath refid="generate.class.path"/>
		</java>
	</target>
	<target name="clean">
		<delete quiet="true">
			<fileset dir="temp/project/efg/searchableDocument"/>
		</delete>
	</target>
</project>
